root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
spaces_around_operators = true

[*.js]
quote_type = single

[*.{html,less,css,json}]
quote_type = double

[*.{md,markdown,py}]
indent_size = 2

[*.go]
indent_style = space
